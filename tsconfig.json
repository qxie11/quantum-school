{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@components/*": ["./components/*"],
      "@utils/*": ["./utils/*"],
      "@constants/*": ["./constants/*"],
      "@styles/*": ["./styles/*"],
      "@shared/*": ["./shared/*"],
      "@store/*": ["./shared/store/*"],
      "@entities/*": ["./entities/*"],
      "@hooks/*": ["./shared/hooks/*"],
      "@models/*": ["./entities/models/*"],
      "@enums/*": ["./enums/*"],
      "@api/*": ["./api/*"],
      "@assets/*": ["./shared/assets/*"],
      "@pages/*": ["./page/*"],
      "@widgets/*": ["./widgets/*"],
      "@features/*": ["./features/*"],
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
