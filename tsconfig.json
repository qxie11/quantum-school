{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@pages/*": ["./pages/*"],
      "@components/*": ["./components/*"],
      "@utils/*": ["./utils/*"],
      "@constants/*": ["./constants/*"],
      "@styles/*": ["./styles/*"],
      "@store/*": ["./store/*"],
      "@hooks/*": ["./hooks/*"],
      "@models/*": ["./models/*"],
      "@enums/*": ["./enums/*"],
      "@api/*": ["./api/*"],
      "@assets/*": ["./assets/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
